{
  "info": {
    "name": "Rental Mobil API - Collection",
    "_postman_id": "rental-mobil-api-collection",
    "description": "Postman collection for Rental Mobil API (endpoints in routes/api.php)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"QA User\",\n  \"email\": \"qa@example.com\",\n  \"password\": \"password\",\n  \"password_confirmation\": \"password\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "register"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is 201 or 200', function () {",
                  "  pm.expect(pm.response.code).to.be.oneOf([200,201]);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"qa@example.com\",\n  \"password\": \"password\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "login"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Login success and token present', function () {",
                  "  pm.response.to.have.status(200);",
                  "  var json = pm.response.json();",
                  "  pm.expect(json).to.have.property('token');",
                  "  // set token to environment for convenience (Bearer token)\n",
                  "  pm.environment.set('token', json.token ? json.token : '');",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Protected - Auth",
      "item": [
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/logout",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "logout"
              ]
            }
          }
        },
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/me",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "me"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Cars",
      "item": [
        {
          "name": "List Cars",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/cars",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "cars"
              ]
            }
          }
        },
        {
          "name": "Create Car (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"make\": \"Toyota\",\n  \"model\": \"Avanza\",\n  \"year\": 2020,\n  \"stock\": 3,\n  \"price_per_day\": 300000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cars",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "cars"
              ]
            }
          }
        },
        {
          "name": "Update Car (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"stock\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cars/:id",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "cars",
                ":id"
              ]
            }
          }
        },
        {
          "name": "Delete Car (Admin)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/cars/:id",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "cars",
                ":id"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"car_id\": 1,\n  \"start_date\": \"2025-12-25\",\n  \"end_date\": \"2025-12-27\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/bookings",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "bookings"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Accept both success and handled error (e.g., out of stock)",
                  "pm.test('Booking should return 201 or a handled 400 with stok message', function () {",
                  "  pm.expect(pm.response.code).to.be.oneOf([201,400]);",
                  "  if (pm.response.code === 400) {",
                  "    var json = pm.response.json();",
                  "    pm.expect(JSON.stringify(json).toLowerCase()).to.include('stok');",
                  "  }",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "My Bookings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/bookings/me",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "bookings",
                "me"
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ]
}
